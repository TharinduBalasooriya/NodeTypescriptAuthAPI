{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6"],
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "outDir": "dist"
    },
    "exclude": ["node_modules"]
  }
  